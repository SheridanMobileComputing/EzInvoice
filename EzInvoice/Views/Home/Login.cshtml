@model EzInvoice.Models.UserLogin

@{
    Layout = "_LoginLayout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title class="title">Login</title>
</head>
<body>
    <div class="main-header">
        <h1 class="text-center font-weight-bold jumbotron"> Welcome to EzInvoice </h1>
    </div>


    <h2 class="font-weight-normal login text-center">Login</h2>

    @using (Html.BeginForm("login", "Home", FormMethod.Post))
    {
        @Html.ValidationSummary(true)
        <fieldset class="text-center">
            <div class="form-group">
                @Html.EditorFor(model => model.EmailAddress, new { htmlAttributes = new { placeholder = "Enter Email Address", @class = "form-control", style = "width:40%; margin-left:30%" } })
                @Html.ValidationMessageFor(model => model.EmailAddress)
            </div>
            <div class="form-group">
                @Html.EditorFor(model => model.Password,  new { htmlAttributes = new { placeholder = "Enter Password", @class = "form-control", style = "width:40%; margin-left:30%" } })
                @Html.ValidationMessageFor(model => model.Password)
            </div>
            <p>
                <input class="btn btn-light" type="submit" value="Login"/>
            </p>
        </fieldset>
    }

