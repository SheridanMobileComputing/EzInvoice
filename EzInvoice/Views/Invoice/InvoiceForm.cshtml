@model Invoice

@{
    Layout = "_OtherLayout";
}

<div class="container">
    <h1 class="jumbotron text-center">Invoice Form</h1>
</div>

<div class="panel panel-success">
    <div class="panel-body">
        <form class="p-a-1" asp-action="SaveInvoice" method="post">
            <div asp-validation-summary="All"></div>

            <div class="form-group">
                <label asp-for="Date_of_issue">Date of Issue:</label>
                <input class="form-control" type="date" asp-for="Date_of_issue" />
            </div>

            <div class="form-group">
                <label asp-for="Due_date">Due Date:</label>
                <input class="form-control" type="date" asp-for="Due_date" />
            </div>

            <div class="form-group">
                <label asp-for="Paid">Invoice Status: </label>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" checked type="radio" name="inlineRadioOptions" id="radioOS" value="false" asp-for="Paid">
                    <label class="form-check-label" for="radioOS"> Outstanding</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="radioPd" value="true" asp-for="Paid">
                    <label class="form-check-label" for="radioPd"> Paid</label>
                </div>
            </div>
            
            

            <div class="form-group">
                <label asp-for="Tax_rate">Tax Rate:</label>
                <input class="form-control" type="number" step="0.01" asp-for="Tax_rate" min="0" max="1" />
            </div>

            <div class="text-center">
                <input class="button btn-primary" type="submit" name="submit" value="Save Invoice" />
            </div>

        </form>
    </div>
</div>