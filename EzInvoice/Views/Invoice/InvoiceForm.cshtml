@*@model Invoice*@

@{
    Layout = "_OtherLayout";
}

<div class="container">
    <h1 class="jumbotron text-center">Invoice Form</h1>
</div>

<div class="panel panel-success">
    <div class="panel-body">
        <form class="p-a-1" asp-action="SaveInvoice" method="post">
            <div asp-validation-summary="All"></div>

            <div class="form-group">
                <label></label>
                <select name="clientId">
                    @foreach (var client in ViewBag.Clients)
                    {
                        <option value="@client.Id">@client.Name</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label>Date of Issue:</label>
                <input class="form-control" type="date" name="dateOfIssue" />
            </div>

            <div class="form-group">
                <label>Due Date:</label>
                <input class="form-control" type="date" name="dueDate" />
            </div>

            <div class="form-group">
                <label>Invoice Status: </label>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" checked type="radio" name="inlineRadioOptions" id="radioOS" value="false" name="paid">
                    <label class="form-check-label" for="radioOS"> Outstanding</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="radioPd" value="true" name="paid">
                    <label class="form-check-label" for="radioPd"> Paid</label>
                </div>
            </div>

            <div class="form-group">
                <label name="TaxRate">Tax Rate:</label>
                <input class="form-control" type="number" step="0.01" name="TaxRate" min="0" max="1" />
            </div>

            <div class="text-center">
                <input class="button btn-danger" type="button" value="Cancel" onclick="location.href = '@Url.Action("Index","Invoice")';" />
                <input class="button btn-info" type="reset" name="reset" value="Reset Form" />
                <input class="button btn-success" type="submit" name="submit" value="Save" />
            </div>

        </form>
    </div>
</div>